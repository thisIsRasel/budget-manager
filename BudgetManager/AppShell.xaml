<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="BudgetManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BudgetManager.Views">

    <TabBar>
        <!-- <ShellContent Title="Home" ContentTemplate="{DataTemplate views:MainPage}" /> -->
        <ShellContent Title="Daily Trans." ContentTemplate="{DataTemplate views:TransactionListPage}" >
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="fa-solid"
                    Glyph="&#xf03a;"/>
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent Title="Budgets" ContentTemplate="{DataTemplate views:BudgetPage}">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="fa-solid"
                    Glyph="&#xf555;"/>
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent Title="Categories" ContentTemplate="{DataTemplate views:CategoryPage}">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="fa-solid"
                    Glyph="&#xf02c;"/>
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent Title="Notes" ContentTemplate="{DataTemplate views:NotesPage}">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="fa-solid"
                    Glyph="&#xf249;"/>
            </ShellContent.Icon>
        </ShellContent>
        <!-- ShellContent Title="Reports" ContentTemplate="{DataTemplate views:ReportPage}" /> -->
    </TabBar>

</Shell>