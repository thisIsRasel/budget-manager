<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Brand -->
    <Color x:Key="Primary">#374046</Color>
    <Color x:Key="PrimaryDark">#00796B</Color>
    <Color x:Key="PrimaryLight">#B2DFDB</Color>
    <Color x:Key="Accent">#FF5722</Color>

    <!-- Backgrounds -->
    <Color x:Key="PageBackground">#374046</Color>
    <Color x:Key="Surface">#607D8B</Color>

    <!-- Text -->
    <Color x:Key="TextPrimary">#F9FAFB</Color>     <!-- Main text -->
    <Color x:Key="TextSecondary">#D1D5DB</Color>   <!-- Subtext -->
    <Color x:Key="Placeholder">#9CA3AF</Color>     <!-- Hints -->

    <!-- Dividers -->
    <Color x:Key="Divider">#BDBDBD</Color>

</ResourceDictionary>
