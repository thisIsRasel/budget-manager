<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BudgetManager.ViewModels"
             x:Class="BudgetManager.Views.BudgetCreationPage"
             Title="{Binding PageTitle}">

    <Grid Style="{StaticResource PageBody}">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Picker ItemsSource="{Binding Categories}"
                    ItemDisplayBinding="{Binding DisplayName}"
                    SelectedItem="{Binding SelectedCategory}"
                    Title="Select" />

                <Entry Placeholder="Enter amount" 
                   Keyboard="Numeric" 
                   Text="{Binding BudgetAmount}" />

                <Button Text="Save Budget" 
                    Command="{Binding SaveBudgetCommand}"
                    TextColor="White"
                    Margin="0,20,0,0" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
