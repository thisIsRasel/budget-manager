<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetManager.Views.BudgetDetailsPage"
             xmlns:vm="clr-namespace:BudgetManager.ViewModels"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*">
        <Grid RowDefinitions="Auto, Auto">
            <Grid Style="{StaticResource PageHeader}"
                RowDefinitions="Auto,Auto">

                <Grid ColumnDefinitions="Auto,*,Auto">
                    <HorizontalStackLayout>
                        <Button Style="{StaticResource Circular}"
                            Text="&#xf060;"
                            FontFamily="fa-solid"
                            TextColor="{StaticResource TextPrimary}"
                            Command="{Binding GoBackCommand}"/>

                        <Label Text="{Binding Title}"
                           TextColor="White"
                           FontSize="18"
                           VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End">
                        <HorizontalStackLayout>
                            <Button Style="{StaticResource Circular}"
                                Text="&#xf104;"
                                FontFamily="fa-solid"
                                TextColor="{StaticResource TextPrimary}"
                                Command="{Binding PreviousMonthCommand}"/>

                            <Label Text="{Binding MonthDisplay}"
                               TextColor="White"
                               FontSize="18"
                               VerticalOptions="Center" />

                            <Button Grid.Column="2"
                                Style="{StaticResource Circular}"
                                Text="&#xf105;"
                                FontFamily="fa-solid"
                                TextColor="{StaticResource TextPrimary}"
                                Command="{Binding NextMonthCommand}"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End">
                            <Button Style="{StaticResource Circular}"
                                Text="&#xf044;"
                                FontFamily="fa-solid"
                                TextColor="{StaticResource TextPrimary}"
                                Command="{Binding GoToYearlyBudgetCommand}" />
                        </HorizontalStackLayout>
                    </HorizontalStackLayout>
                </Grid>

                <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Margin="12">
                    <VerticalStackLayout HorizontalOptions="Start">
                        <Label Text="Total Budget" HorizontalOptions="Center"/>
                        <Label
                            Text="{Binding CurrentBudget.Amount, StringFormat='৳ {0:F2}'}" 
                            HorizontalOptions="Center" 
                            FontSize="16" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="Expenses" HorizontalOptions="Center"/>
                        <Label
                            Text="{Binding CurrentBudget.FormattedSpent}"
                            HorizontalOptions="Center"
                            FontSize="16"
                            TextColor="{StaticResource Accent}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="2" HorizontalOptions="End">
                        <Label Text="Remaining" HorizontalOptions="Center"/>
                        <Label 
                            Text="{Binding CurrentBudget.FormattedRemaining}" 
                            HorizontalOptions="Center" 
                            FontSize="16"
                            TextColor="#4FC3F7" />
                    </VerticalStackLayout>
                </Grid>
            </Grid>

            <BoxView Grid.Row="1" Style="{StaticResource Divider}" />
        </Grid>

        <Grid Grid.Row="1" Style="{StaticResource PageBody}" RowDefinitions="Auto,*">
            <!-- Costs List -->
            <CollectionView Grid.Row="1" ItemsSource="{Binding Costs}" Margin="12,0">
                <CollectionView.EmptyView>
                    <Label Text="No costs found for this budget."
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Gray"/>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,8,0,0" Padding="16" StrokeThickness="0" BackgroundColor="#F5F5F5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="4"/>
                            </Border.StrokeShape>

                            <Border.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BudgetDetailsViewModel}}, Path=EditTransactionCommand}"
                                    CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>

                            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                                <Label Grid.Row="0" Grid.Column="0" Text="{Binding CategoryName}" FontAttributes="Bold" TextColor="Black"/>
                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Amount, StringFormat='- ৳ {0:F2}'}" TextColor="{StaticResource Accent}" FontAttributes="Bold"/>

                                <Grid Grid.Row="1" ColumnDefinitions="Auto,*" IsVisible="{Binding HasNote}">
                                    <Label Grid.Column="0" Text="Note: " FontSize="12" FontAttributes="Italic" TextColor="Gray" />
                                    <Label Grid.Column="1"
                                        Text="{Binding Note}" FontSize="12" FontAttributes="Italic" TextColor="Gray" LineBreakMode="TailTruncation"/>
                                </Grid>
                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding DisplayDate}" FontSize="12"  HorizontalOptions="End" TextColor="Gray"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>
