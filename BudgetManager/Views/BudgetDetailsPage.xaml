<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetManager.Views.BudgetDetailsPage"
             xmlns:vm="clr-namespace:BudgetManager.ViewModels"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding GoToYearlyBudgetCommand}" Order="Primary" Priority="0">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="fa-solid"
                    Glyph="&#xf044;"
                    Size="20" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid Style="{StaticResource PageBody}" RowDefinitions="Auto,*">

        <Border Margin="12,12,12,0" StrokeShape="RoundRectangle 4" Background="{StaticResource Surface}">
            <VerticalStackLayout Padding="16">

                <Grid ColumnDefinitions="*,*,*">
                    <VerticalStackLayout HorizontalOptions="Start">
                        <Label Text="Total" HorizontalOptions="Center"/>
                        <Label
                            Text="{Binding CurrentBudget.Amount, StringFormat='৳ {0:F2}'}" 
                            HorizontalOptions="Center" 
                            FontSize="16" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="Expenses" HorizontalOptions="Center"/>
                        <Label
                            Text="{Binding CurrentBudget.FormattedSpent}"
                            HorizontalOptions="Center"
                            FontSize="16"
                            TextColor="{StaticResource Accent}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="2" HorizontalOptions="End">
                        <Label Text="Remaining" HorizontalOptions="Center"/>
                        <Label 
                            Text="{Binding CurrentBudget.FormattedRemaining}" 
                            HorizontalOptions="Center" 
                            FontSize="16"
                            TextColor="#4FC3F7" />
                    </VerticalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </Border>
        
        <!-- Costs List -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Costs}" Margin="12,0">
            <CollectionView.EmptyView>
                <Label Text="No costs found for this budget."
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Gray"/>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                     <Border Margin="0,8" Padding="16" StrokeThickness="0" BackgroundColor="#F5F5F5">
                         <Border.StrokeShape>
                             <RoundRectangle CornerRadius="4"/>
                         </Border.StrokeShape>

                        <Border.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BudgetDetailsViewModel}}, Path=EditTransactionCommand}"
                                CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>
                         
                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding CategoryName}" FontAttributes="Bold" TextColor="Black"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Amount, StringFormat='- ৳ {0:F2}'}" TextColor="{StaticResource Accent}" FontAttributes="Bold"/>
                             
                             
                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding Note}" FontSize="12" TextColor="Gray" LineBreakMode="TailTruncation"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding DisplayDate}" FontSize="12"  HorizontalOptions="End" TextColor="Gray"/>
                        </Grid>
                     </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
