<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetManager.Views.TransactionListPage"
    xmlns:vm="clr-namespace:BudgetManager.ViewModels">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ðŸ” Header -->
        <Grid Style="{StaticResource PageHeader}" ColumnDefinitions="Auto,*,Auto">
            <HorizontalStackLayout>
                <Button Style="{StaticResource Circular}"
                    Text="&#xf104;"
                    FontFamily="fa-solid"
                    Command="{Binding PreviousMonthCommand}"/>

                <Label Text="{Binding MonthDisplay}"
                   TextColor="White"
                   FontSize="18"
                   VerticalOptions="Center" />

                <!-- Next Month Button -->
                <Button Grid.Column="2"
                    Style="{StaticResource Circular}"
                    Text="&#xf105;"
                    FontFamily="fa-solid"
                    Command="{Binding NextMonthCommand}"/>
            </HorizontalStackLayout>
        </Grid>

        <Grid Grid.Row="1" Style="{StaticResource PageBody}">
            <!-- Main Content Area -->

            <CollectionView ItemsSource="{Binding GroupedCostEntries}">
                <CollectionView.EmptyView>
                    <Grid>
                        <Label Text="No transactions added this month yet."
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            VerticalOptions="Center"
                            FontSize="16" />
                    </Grid>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <ScrollView>
                            <Border Margin="12,8" StrokeShape="RoundRectangle 4" Background="{StaticResource Surface}">
                                <StackLayout Spacing="0">
                                    <!-- Date Header with Total -->

                                    <Grid ColumnDefinitions="*,Auto" 
                                        Padding="16,8">
                                        <Label Grid.Column="0" 
                                            Text="{Binding DisplayDate}" 
                                            FontSize="14"
                                            TextColor="{StaticResource TextPrimary}"
                                            FontAttributes="Bold"
                                            VerticalOptions="Center" />

                                        <Label Grid.Column="1" 
                                            Text="{Binding TotalAmount, StringFormat='à§³ {0:F2}'}" 
                                            FontSize="16" 
                                            FontAttributes="Bold"
                                            TextColor="#FF6B4A"
                                            HorizontalOptions="End"
                                            VerticalOptions="Center" />
                                    </Grid>

                                    <BoxView HeightRequest="0.1"
                                        BackgroundColor="{DynamicResource Divider}"/>

                                    <!-- Items for this Date -->
                                    <CollectionView ItemsSource="{Binding Items}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ColumnDefinitions="Auto,*,Auto" Padding="16,8">
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer 
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TransactionViewModel}}, Path=EditItemCommand}"
                                                        CommandParameter="{Binding .}" />
                                                    </Grid.GestureRecognizers>

                                                    <VerticalStackLayout>
                                                        <Label Text="{Binding CategoryName}" TextColor="{StaticResource TextPrimary}"/>
                                                    </VerticalStackLayout>

                                                    <Label Grid.Column="2"
                                                    Text="{Binding Amount, StringFormat='à§³ {0:F2}'}" 
                                                    TextColor="{StaticResource Accent}"
                                                    VerticalOptions="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>

                                </StackLayout>
                            </Border>
                        </ScrollView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Floating Action Button -->
            <Button
                Text="+"
                Style="{StaticResource Fab}"
                Command="{Binding GoToAddCostCommand}"/>
        </Grid>
    </Grid>
</ContentPage>