<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetManager.Views.TransactionListPage"
    xmlns:vm="clr-namespace:BudgetManager.ViewModels">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ðŸ” Header -->
        <Grid Style="{StaticResource PageHeader}" ColumnDefinitions="Auto,*,Auto">
            <HorizontalStackLayout>
                <Button
                    Text="â—€"
                    BackgroundColor="Transparent"
                    FontSize="20"
                    Padding="0,0,10,0"
                    Command="{Binding PreviousMonthCommand}"/>

                <Label Text="{Binding MonthDisplay}"
                   TextColor="White"
                   FontSize="18"
                   VerticalOptions="Center" />

                <!-- Next Month Button -->
                <Button Grid.Column="2"
                    Text="â–¶"
                    BackgroundColor="Transparent"
                    FontSize="20"
                    Padding="0"
                    WidthRequest="40"
                    Command="{Binding NextMonthCommand}"/>
            </HorizontalStackLayout>
        </Grid>

        <Grid Grid.Row="1" Style="{StaticResource PageBody}">
            <!-- Main Content Area -->
            <ScrollView>
                <VerticalStackLayout Spacing="12">

                    <CollectionView ItemsSource="{Binding GroupedCostEntries}">
                        <CollectionView.EmptyView>
                            <Label Text="No costs added this month." 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"/>
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="12,4" StrokeShape="RoundRectangle 4" Background="#455A64">
                                    <StackLayout Spacing="0" Margin="0,0,0,16">
                                        <!-- Date Header with Total -->
                                        
                                        <Grid ColumnDefinitions="*,Auto" 
                                            Padding="16,8">
                                            <Label Grid.Column="0" 
                                               Text="{Binding DisplayDate}" 
                                               FontSize="14"
                                               TextColor="{StaticResource TextPrimary}"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center" />

                                            <Label Grid.Column="1" 
                                               Text="{Binding TotalAmount, StringFormat='à§³ {0:F2}'}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               TextColor="#FF6B4A"
                                               HorizontalOptions="End"
                                               VerticalOptions="Center" />
                                        </Grid>

                                        <BoxView HeightRequest="0.1"
                                            BackgroundColor="{DynamicResource Divider}"/>

                                        <!-- Items for this Date -->
                                        <CollectionView ItemsSource="{Binding Items}">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid ColumnDefinitions="Auto,*,Auto" Padding="16,8">
                                                        <Grid.GestureRecognizers>
                                                            <TapGestureRecognizer 
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TransactionViewModel}}, Path=EditItemCommand}"
                                                            CommandParameter="{Binding .}" />
                                                        </Grid.GestureRecognizers>

                                                        <VerticalStackLayout>
                                                            <Label Text="{Binding CategoryName}" TextColor="{StaticResource TextPrimary}"/>
                                                        </VerticalStackLayout>

                                                        <Label Grid.Column="2"
                                                        Text="{Binding Amount, StringFormat='à§³ {0:F2}'}" 
                                                        TextColor="{StaticResource Accent}"
                                                        VerticalOptions="Center"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>

                                    </StackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
                
            </ScrollView>

            <!-- Floating Action Button -->
            <Button
                Text="+"
                Style="{StaticResource Fab}"
                Command="{Binding GoToAddCostCommand}"/>
        </Grid>
    </Grid>
</ContentPage>