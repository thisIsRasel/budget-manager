<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetManager.Views.TransactionListPage"
    xmlns:vm="clr-namespace:BudgetManager.ViewModels">

    <Grid RowDefinitions="Auto,*">

        <Grid RowDefinitions="Auto, Auto">
            <Grid Style="{StaticResource PageHeader}"
                RowDefinitions="Auto, Auto, Auto">

                <Grid ColumnDefinitions="Auto">
                    <HorizontalStackLayout>
                        <Button Style="{StaticResource Circular}"
                            Text="&#xf104;"
                            FontFamily="fa-solid"
                            TextColor="{StaticResource TextPrimary}"
                            Command="{Binding PreviousMonthCommand}"/>

                        <Label Text="{Binding MonthDisplay}"
                           TextColor="{StaticResource TextPrimary}"
                           FontSize="18"
                           VerticalOptions="Center" />

                        <Button Grid.Column="2"
                            Style="{StaticResource Circular}"
                            Text="&#xf105;"
                            FontFamily="fa-solid"
                            TextColor="{StaticResource TextPrimary}"
                            Command="{Binding NextMonthCommand}"/>
                    </HorizontalStackLayout>
                </Grid>

                <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Margin="12">
                    <VerticalStackLayout HorizontalOptions="Start">
                        <Label Text="Total Budget" HorizontalOptions="Center"/>
                        <Label
                            Text="{Binding TotalBudget, StringFormat='৳ {0:F2}'}" 
                            HorizontalOptions="Center" 
                            FontSize="16" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="Expenses" HorizontalOptions="Center"/>
                        <Label
                            Text="{Binding TotalSpent, StringFormat='৳ {0:F2}'}"
                            HorizontalOptions="Center"
                            FontSize="16"
                            TextColor="{StaticResource Accent}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="2" HorizontalOptions="End">
                        <Label Text="Remaining" HorizontalOptions="Center"/>
                        <Label 
                            Text="{Binding RemainingAmount, StringFormat='৳ {0:F2}'}" 
                            HorizontalOptions="Center" 
                            FontSize="16"
                            TextColor="#4FC3F7" />
                    </VerticalStackLayout>
                </Grid>
            </Grid>

            <BoxView Grid.Row="1" HeightRequest="0.1"
                BackgroundColor="{DynamicResource Divider}"/>
        </Grid>
        
        <Grid Grid.Row="1" Style="{StaticResource PageBody}">

            <CollectionView ItemsSource="{Binding GroupedCostEntries}">
                <CollectionView.EmptyView>
                    <Grid>
                        <Label Text="No transactions added this month yet."
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            VerticalOptions="Center"
                            FontSize="16" />
                    </Grid>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <Border Margin="12,8,12,0" StrokeShape="RoundRectangle 4" Background="{StaticResource Surface}">
                                <StackLayout Spacing="0">
                                    <!-- Date Header with Total -->

                                    <Grid ColumnDefinitions="Auto,*,Auto" 
                                        Padding="16,8">
                                        <Label Grid.Column="0" 
                                            Text="{Binding DayNumber}" 
                                            FontSize="20"
                                            TextColor="{StaticResource TextPrimary}"
                                            FontAttributes="Bold"
                                            VerticalOptions="Center" />
                                        
                                        <Label Grid.Column="1" 
                                            Text="{Binding DisplayDate}" 
                                            FontSize="14"
                                            TextColor="{StaticResource TextPrimary}"
                                            VerticalOptions="Center" Margin="4,0" />

                                        <Label Grid.Column="2" 
                                            Text="{Binding TotalAmount, StringFormat='৳ {0:F2}'}" 
                                            FontSize="16" 
                                            FontAttributes="Bold"
                                            TextColor="#FF6B4A"
                                            HorizontalOptions="End"
                                            VerticalOptions="Center" />
                                    </Grid>

                                    <BoxView HeightRequest="0.1"
                                        BackgroundColor="{DynamicResource Divider}"/>

                                    <!-- Items for this Date -->
                                    <CollectionView ItemsSource="{Binding Items}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid RowDefinitions="Auto, Auto" Padding="16,8">
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer 
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TransactionViewModel}}, Path=EditItemCommand}"
                                                        CommandParameter="{Binding .}" />
                                                    </Grid.GestureRecognizers>

                                                    <Grid ColumnDefinitions="Auto, *, Auto">
                                                        <Label Text="{Binding CategoryName}" TextColor="{StaticResource TextPrimary}"/>

                                                        <Label Grid.Column="2"
                                                        Text="{Binding Amount, StringFormat='৳ {0:F2}'}" 
                                                        TextColor="{StaticResource Accent}"
                                                        VerticalOptions="Center"/>
                                                    </Grid>
                                                    <Grid Grid.Row="1" ColumnDefinitions="*,100" IsVisible="{Binding HasNote}">
                                                        <Label Text="{Binding Note}" TextColor="{StaticResource TextSecondary}" FontSize="12" />
                                                    </Grid>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </Border>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Floating Action Button -->
            <Button
                Text="+"
                Style="{StaticResource Fab}"
                Command="{Binding GoToAddCostCommand}"/>
        </Grid>
    </Grid>
</ContentPage>