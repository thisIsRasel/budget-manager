<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetManager.Views.BudgetListPage"
    xmlns:vm="clr-namespace:BudgetManager.ViewModels"
    xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
    xmlns:local="clr-namespace:BudgetManager.Services"
    Title="Budgets">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ProgressToColorConverter x:Key="ProgressColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *">
        <Grid RowDefinitions="Auto, Auto">
            <Grid Style="{StaticResource PageHeader}"
                  RowDefinitions="Auto,Auto">
                
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <HorizontalStackLayout>
                        <Button Style="{StaticResource Circular}"
                            Text="&#xf104;"
                            FontFamily="fa-solid"
                            TextColor="{StaticResource TextPrimary}"
                            Command="{Binding PreviousMonthCommand}"/>

                        <Label Text="{Binding MonthDisplay}"
                           TextColor="White"
                           FontSize="18"
                           VerticalOptions="Center" />

                        <!-- Next Month Button -->
                        <Button Grid.Column="2"
                            Style="{StaticResource Circular}"
                            Text="&#xf105;"
                            FontFamily="fa-solid"
                            TextColor="{StaticResource TextPrimary}"
                            Command="{Binding NextMonthCommand}"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End">
                        <Button Style="{StaticResource Circular}"
                            Text="&#xf067;"
                            FontFamily="fa-solid"
                            TextColor="{StaticResource TextPrimary}"
                            Command="{Binding GoToAddBudgetCommand}" />
                    </HorizontalStackLayout>
                </Grid>

                <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Margin="12">
                    <VerticalStackLayout HorizontalOptions="Start">
                        <Label Text="Total Budget" HorizontalOptions="Center"/>
                        <Label
                            Text="{Binding TotalBudget, StringFormat='৳ {0:F2}'}" 
                            HorizontalOptions="Center" 
                            FontSize="16" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="Expenses" HorizontalOptions="Center"/>
                        <Label
                            Text="{Binding TotalSpent, StringFormat='৳ {0:F2}'}"
                            HorizontalOptions="Center"
                            FontSize="16"
                            TextColor="{StaticResource Accent}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="2" HorizontalOptions="End">
                        <Label Text="Remaining" HorizontalOptions="Center"/>
                        <Label 
                            Text="{Binding RemainingAmount, StringFormat='৳ {0:F2}'}" 
                            HorizontalOptions="Center" 
                            FontSize="16"
                            TextColor="#4FC3F7" />
                    </VerticalStackLayout>
                </Grid>
            </Grid>
            
            <BoxView Grid.Row="1" Style="{StaticResource Divider}"/>
        </Grid>

        <Grid Grid.Row="1" Style="{StaticResource PageBody}" RowDefinitions="Auto, *">
            <Grid Grid.Row="0" IsVisible="{Binding IsChartVisible}">
                <VerticalStackLayout Padding="20" Spacing="15">
                    <micro:ChartView
                        Chart="{Binding BudgetChart}"
                        HeightRequest="120"
                        BackgroundColor="{StaticResource PageBackground}" />
                </VerticalStackLayout>
            </Grid>
            <CollectionView Grid.Row="1" ItemsSource="{Binding Budgets}" MinimumHeightRequest="1000">
                <CollectionView.EmptyView>
                    <Label Text="No budgets added this month yet. Tap the + button to create one!" 
                        FontSize="16"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        HorizontalTextAlignment="Center" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <Border StrokeThickness="0" Padding="16">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BudgetListViewModel}}, Path=GoToBudgetDetailsCommand}"
                                            CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>

                                <Grid ColumnDefinitions="*,Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                    <!-- Budget Name -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                        Text="{Binding Name}" 
                                        FontSize="18" 
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"/>

                                    <!-- Budget Amount -->
                                    <Label Grid.Row="0" Grid.Column="2"
                                        Text="{Binding Amount, StringFormat='৳ {0:F2}'}" 
                                        FontSize="18" 
                                        FontAttributes="Bold"
                                        TextColor="{StaticResource TextPrimary}"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center" />

                                    <!-- Progress Bar -->
                                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 4"
                                        Margin="0,4,0,8">
                                        <ProgressBar Progress="{Binding ProgressPercentage}"
                                                     ProgressColor="{Binding ProgressPercentage, Converter={StaticResource ProgressColorConverter}}"/>
                                    </Border>

                                    <Label Grid.Row="1" Grid.Column="1"
                                        Text="{Binding FormattedPercentage}"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        TextColor="{StaticResource TextPrimary}"
                                        HorizontalOptions="Center"
                                        Margin="0,6" />

                                    <!-- Spent and Remaining Labels (Below Progress Bar) -->
                                    <Label Grid.Row="2" Grid.Column="0"
                                        Text="{Binding FormattedSpent}"
                                        FontSize="12"
                                        TextColor="{StaticResource Accent}"
                                        HorizontalOptions="Start"/>

                                    <Label Grid.Row="2" Grid.Column="2"
                                        Text="{Binding FormattedRemaining}"
                                        FontSize="12"
                                        TextColor="#4FC3F7"
                                        HorizontalOptions="End" />
                                </Grid>
                            </Border>

                            <BoxView Style="{StaticResource Divider}"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>